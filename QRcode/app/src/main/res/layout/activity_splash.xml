<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.david.qrcode.ParticleView.ParticleView
        android:id="@+id/pv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        pv:pv_background_color="@color/white"
        pv:pv_host_text="扫码助手"
        pv:pv_host_text_anim_time="1000"
        pv:pv_particle_text="2.0"
        pv:pv_particle_text_size="18sp"
        pv:pv_spread_anim_time="800"
        pv:pv_text_anim_time="800"
        pv:pv_text_color="#03A9F4" />

</android.support.constraint.ConstraintLayout>
